<!DOCTYPE html>
<html ng-app="bloggerApp">
  <head>
    <title><%= title %> Blog Site</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script src="/js/angular.min.js"></script>
    <script src="/js/angular-route.min.js"></script>  
    <script src="/js/angular-ui-router.min.js"></script>
  </head>
  <body>  
    <nav class="navbar fixed-top navbar-expand-sm navbar-dark bg-primary">
      <a class="navbar-brand" href="/">My Blog</a>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link active" href="/blogList">List Blogs</a>
          <a class="nav-item nav-link active" href="/blogAdd">Add Blogs</a>
        </div>
      </div>
    </nav>

    <script type="text/ng-template" id="index.html/listAll.html">
      <h1><%= title %>'s Blog Site</h1>
      <p>Welcome to my website</p>
    </script>

    <script type="text/ng-template" id="listAll.html">
      <p></p>
      <div ng-repeat="blog in vm.blogs">
        <div class="card border-primary" style="width: 50%"> 
          <div class="card-header">
          </div>
          <div class="card-body">
              <h5 class ="card-title">{{ blog.blogText }}</h5><{{ blog.date }}
          </div>
          <div class="card-footer">
            <div class = "col-sm">
              <ul class="nav justify-content-end nav-pills card-header-pills">
                <li class="nav-item">
                  <a class="nav-link" href="/blogEdit/<{{ blog._id }}"> <i class="fas fa-edit"></i></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/blogDelete/{{ blog._id }}"> <i class="fas fa-trash-alt"></i></a>
                </li>
              </ul>
            </div>  
          </div>
        </div>
      </div>
    </script>

    <!-- Angular View (dynamic content goes here) -->  
    <div ng-view></div>
    
    <script src="/js/bookApp.js"></script>
  </body>

  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
</html>
